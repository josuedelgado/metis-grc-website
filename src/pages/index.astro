---
import BaseLayout from '../layouts/BaseLayout.astro';
import AnimatedSection from '../components/shared/AnimatedSection.tsx';
import FrameworkComparison from '../components/home/FrameworkComparison.tsx';
import { SITE } from '../lib/constants';
---

<BaseLayout>
  <!-- ═══ HERO ═══ -->
  <section class="relative bg-gradient-to-br from-panel-dark via-primary-900 to-primary overflow-hidden">
    <div class="absolute inset-0 opacity-10" style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='40' height='40' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 0h40v40H0z' fill='none' stroke='%234CB2FF' stroke-width='0.5'/%3E%3C/svg%3E&quot;);"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <AnimatedSection client:visible>
            <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur rounded-full px-4 py-1.5 mb-6">
              <span class="w-2 h-2 rounded-full bg-success animate-pulse"></span>
              <span class="text-sm text-gray-300">Now Live — EU Hosted</span>
            </div>
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6">
              Unified Cybersecurity<br />
              <span class="text-secondary">GRC Platform</span>
            </h1>
            <p class="text-lg text-gray-300 mb-8 max-w-lg">
              NIS2, ISO 27001, NIST CSF 2.0, CIS Controls — one platform, AI-powered. Simplify governance, risk, and compliance for your organization.
            </p>
            <div class="flex flex-wrap gap-4">
              <a href={`${SITE.appUrl}/register`} class="inline-flex items-center justify-center bg-secondary hover:bg-secondary-600 text-white font-medium px-6 py-3 rounded-lg transition-colors">
                Start Free Trial
              </a>
              <a href="/contact" class="inline-flex items-center justify-center border border-white/30 hover:bg-white/10 text-white font-medium px-6 py-3 rounded-lg transition-colors">
                Book a Demo
              </a>
            </div>
          </AnimatedSection>
        </div>

        <!-- Dashboard mockup -->
        <div class="hidden lg:block">
          <AnimatedSection client:visible delay={0.2}>
            <div class="relative">
              <div class="bg-panel-dark/80 backdrop-blur border border-white/10 rounded-2xl p-6 shadow-xl">
                <div class="grid grid-cols-4 gap-3 mb-4">
                  <div class="bg-white/5 rounded-xl p-3 text-center">
                    <div class="text-2xl font-bold text-success">87%</div>
                    <div class="text-xs text-gray-400 mt-1">Compliance</div>
                  </div>
                  <div class="bg-white/5 rounded-xl p-3 text-center">
                    <div class="text-2xl font-bold text-warning">12</div>
                    <div class="text-xs text-gray-400 mt-1">Open Risks</div>
                  </div>
                  <div class="bg-white/5 rounded-xl p-3 text-center">
                    <div class="text-2xl font-bold text-secondary">156</div>
                    <div class="text-xs text-gray-400 mt-1">Controls</div>
                  </div>
                  <div class="bg-white/5 rounded-xl p-3 text-center">
                    <div class="text-2xl font-bold text-white">24</div>
                    <div class="text-xs text-gray-400 mt-1">Vendors</div>
                  </div>
                </div>
                <div class="bg-white/5 rounded-xl p-4 h-40 flex items-end gap-1.5 overflow-hidden">
                  {[40, 55, 45, 70, 60, 80, 75, 85, 78, 90, 87, 92].map((h) => (
                    <div class="flex-1 rounded-t" style={`height: ${h}%; background: linear-gradient(to top, #1C4E80, #4CB2FF);`}></div>
                  ))}
                </div>
                <div class="flex items-center justify-between mt-3 text-xs text-gray-500">
                  <span>Jan</span><span>Feb</span><span>Mar</span><span>Apr</span><span>May</span><span>Jun</span>
                  <span>Jul</span><span>Aug</span><span>Sep</span><span>Oct</span><span>Nov</span><span>Dec</span>
                </div>
              </div>
              <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-secondary/20 rounded-full blur-2xl"></div>
            </div>
          </AnimatedSection>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ SOCIAL PROOF ═══ -->
  <section class="bg-white border-b border-border">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-wrap items-center justify-center gap-6 md:gap-10">
        <span class="inline-flex items-center gap-2 text-sm text-text-muted">
          <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          EU Hosted
        </span>
        <span class="inline-flex items-center gap-2 text-sm text-text-muted">
          <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
          GDPR Compliant
        </span>
        <span class="inline-flex items-center gap-2 text-sm text-text-muted">
          <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          SOC 2 Ready
        </span>
        <span class="inline-flex items-center gap-2 text-sm text-text-muted">
          <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
          99.9% Uptime SLA
        </span>
      </div>
    </div>
  </section>

  <!-- ═══ PROBLEM ═══ -->
  <section class="py-20 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <AnimatedSection client:visible>
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-text-primary mb-4">The GRC Challenge</h2>
          <p class="text-text-muted max-w-2xl mx-auto">Organizations face growing regulatory complexity, yet most still rely on fragmented, manual processes.</p>
        </div>
      </AnimatedSection>
      <div class="grid md:grid-cols-3 gap-6">
        {[
          { icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2', title: 'Regulatory Complexity', desc: 'NIS2, ISO 27001, NIST, CIS — each with different requirements, controls, and reporting. Tracking them separately is unsustainable.' },
          { icon: 'M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z', title: 'Scattered Tools', desc: 'Spreadsheets, email threads, shared drives — GRC data lives everywhere. No single source of truth means gaps and audit failures.' },
          { icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z', title: 'Manual Compliance', desc: 'Evidence collection, control assessments, risk scoring — hours of manual work. NIS2 demands 24h incident reporting. Manual can\'t keep up.' },
        ].map((card, i) => (
          <AnimatedSection client:visible delay={i * 0.1}>
            <div class="bg-white rounded-[12px] p-6 shadow-card hover:shadow-card-hover transition-shadow">
              <div class="w-10 h-10 rounded-lg bg-critical-50 flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-critical" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d={card.icon} />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-text-primary mb-2">{card.title}</h3>
              <p class="text-sm text-text-muted leading-relaxed">{card.desc}</p>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ SOLUTION OVERVIEW ═══ -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <AnimatedSection client:visible>
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-text-primary mb-4">One Platform. Complete GRC.</h2>
          <p class="text-text-muted max-w-2xl mx-auto">Metis GRC unifies frameworks, risks, controls, evidence, and reporting in a single AI-powered platform.</p>
        </div>
      </AnimatedSection>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {[
          { href: '/product/frameworks', label: 'Multi-Framework Engine', desc: 'NIS2, ISO, NIST, CIS in one place', color: 'bg-primary' },
          { href: '/product/ai', label: 'AI Copilots', desc: '9 AI assistants for every GRC task', color: 'bg-secondary' },
          { href: '/product/nis2', label: 'NIS2 Specialist', desc: 'Country-specific compliance wizard', color: 'bg-success' },
          { href: '/product/vendor-risk', label: 'Vendor Risk', desc: 'Third-party assessment & scoring', color: 'bg-warning' },
        ].map((pill, i) => (
          <AnimatedSection client:visible delay={i * 0.1}>
            <a href={pill.href} class="group block bg-background hover:bg-white rounded-[12px] p-5 border border-border hover:border-primary/20 hover:shadow-card-hover transition-all">
              <div class={`w-2 h-2 rounded-full ${pill.color} mb-3`}></div>
              <h3 class="text-sm font-semibold text-text-primary group-hover:text-primary transition-colors mb-1">{pill.label}</h3>
              <p class="text-xs text-text-muted">{pill.desc}</p>
            </a>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ FEATURE GRID ═══ -->
  <section class="py-20 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <AnimatedSection client:visible>
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-text-primary mb-4">Everything You Need</h2>
          <p class="text-text-muted max-w-2xl mx-auto">From risk registers to audit trails, Metis GRC covers the full compliance lifecycle.</p>
        </div>
      </AnimatedSection>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {[
          { icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z', title: 'Risk Register', desc: 'Enterprise, IT, vendor, and project risk registers with likelihood/impact scoring, heat maps, and treatment plans.' },
          { icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z', title: 'Control Library', desc: 'Centralized controls mapped across frameworks. Track implementation status, link evidence, and identify gaps.' },
          { icon: 'M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z', title: 'Evidence Repository', desc: 'Upload, classify, and auto-link evidence to controls. AI-powered tagging and OCR for document processing.' },
          { icon: 'M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9', title: 'Incident Management', desc: 'NIS2-compliant workflows with 24h/72h reporting timelines. Track incidents from detection to resolution.' },
          { icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z', title: 'Compliance Dashboards', desc: 'Executive and operational views. Real-time compliance scores, risk trends, and framework status at a glance.' },
          { icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z', title: 'Enterprise Admin', desc: 'Multi-tenant architecture, SSO/SAML, RBAC with 10+ roles, audit logging, and API integrations.' },
        ].map((card, i) => (
          <AnimatedSection client:visible delay={i * 0.08}>
            <div class="bg-white rounded-[12px] p-6 shadow-card hover:shadow-card-hover transition-shadow h-full">
              <div class="w-10 h-10 rounded-lg bg-primary-50 flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={card.icon} />
                </svg>
              </div>
              <h3 class="text-base font-semibold text-text-primary mb-2">{card.title}</h3>
              <p class="text-sm text-text-muted leading-relaxed">{card.desc}</p>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ AI SECTION ═══ -->
  <section class="py-20 bg-panel-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <AnimatedSection client:visible>
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-white mb-4">AI Everywhere</h2>
          <div class="w-12 h-1 bg-secondary rounded-full mx-auto mb-4"></div>
          <p class="text-gray-400 max-w-2xl mx-auto">Nine AI copilots embedded across the platform — from regulatory Q&A to predictive compliance analysis.</p>
        </div>
      </AnimatedSection>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {[
          { title: 'Regulatory Q&A', desc: 'Ask questions about frameworks in plain language. Get instant, referenced answers.' },
          { title: 'Control Explanation', desc: 'Understand what each control means and how to implement it in your context.' },
          { title: 'Assessment Assistance', desc: 'AI proposes maturity levels with justification based on your evidence.' },
          { title: 'Evidence Classification', desc: 'Auto-tag uploaded documents with relevant controls and sensitivity levels.' },
          { title: 'Cross-Framework Mapping', desc: 'Discover control equivalences across NIS2, ISO, NIST, and CIS automatically.' },
          { title: 'Remediation Planning', desc: 'Generate prioritized action plans with owners, effort estimates, and timelines.' },
          { title: 'Report Generation', desc: 'Draft board-ready executive summaries and compliance reports in minutes.' },
          { title: 'Risk Recommendations', desc: 'Context-aware risk identification based on your asset and control landscape.' },
          { title: 'Predictive Gap Analysis', desc: 'Early warning system for compliance degradation and emerging risk areas.' },
        ].map((ai, i) => (
          <AnimatedSection client:visible delay={i * 0.06}>
            <div class="bg-white/5 border-l-2 border-secondary rounded-lg p-5 hover:bg-white/10 transition-colors">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-secondary mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <div>
                  <h3 class="text-sm font-semibold text-white mb-1">{ai.title}</h3>
                  <p class="text-xs text-gray-400 leading-relaxed">{ai.desc}</p>
                </div>
              </div>
            </div>
          </AnimatedSection>
        ))}
      </div>
      <AnimatedSection client:visible>
        <div class="text-center mt-10">
          <a href="/product/ai" class="inline-flex items-center gap-2 text-sm text-secondary hover:text-secondary-300 transition-colors font-medium">
            Learn more about AI Copilots
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- ═══ FRAMEWORK COMPARISON ═══ -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <AnimatedSection client:visible>
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-text-primary mb-4">Why Metis GRC?</h2>
          <p class="text-text-muted max-w-2xl mx-auto">See how a purpose-built GRC platform compares to traditional approaches.</p>
        </div>
      </AnimatedSection>
      <AnimatedSection client:visible>
        <div class="bg-background rounded-2xl border border-border p-6 overflow-hidden">
          <FrameworkComparison client:visible />
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- ═══ TESTIMONIALS ═══ -->
  <section class="py-20 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <AnimatedSection client:visible>
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-text-primary mb-4">Trusted by Security Leaders</h2>
        </div>
      </AnimatedSection>
      <div class="grid md:grid-cols-3 gap-6">
        {[
          { quote: 'Metis GRC transformed how we manage multi-framework compliance. What used to take weeks now takes hours.', name: 'Coming Soon', role: 'CISO' },
          { quote: 'The AI copilots are a game-changer — especially for evidence classification and cross-framework mapping.', name: 'Coming Soon', role: 'GRC Manager' },
          { quote: 'Finally, a platform built for NIS2 from the ground up. The incident reporting workflow alone saved us countless hours.', name: 'Coming Soon', role: 'Compliance Officer' },
        ].map((t, i) => (
          <AnimatedSection client:visible delay={i * 0.1}>
            <div class="bg-white rounded-[12px] p-6 shadow-card h-full flex flex-col">
              <svg class="w-8 h-8 text-secondary/30 mb-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
              <p class="text-sm text-text-muted leading-relaxed flex-1 italic">{t.quote}</p>
              <div class="mt-4 pt-4 border-t border-border">
                <div class="text-sm font-medium text-text-primary">{t.name}</div>
                <div class="text-xs text-text-muted">{t.role}</div>
              </div>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ CTA BANNER ═══ -->
  <section class="py-20 bg-gradient-to-r from-primary to-primary-700">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <AnimatedSection client:visible>
        <h2 class="text-3xl font-bold text-white mb-4">Ready to Simplify GRC?</h2>
        <p class="text-primary-200 mb-8 max-w-lg mx-auto">Join organizations that trust Metis GRC for unified cybersecurity governance, risk, and compliance.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href={`${SITE.appUrl}/register`} class="inline-flex items-center justify-center bg-secondary hover:bg-secondary-600 text-white font-medium px-6 py-3 rounded-lg transition-colors">
            Start Free Trial
          </a>
          <a href="/contact" class="inline-flex items-center justify-center bg-white/10 hover:bg-white/20 text-white font-medium px-6 py-3 rounded-lg transition-colors border border-white/20">
            Talk to Sales
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>
</BaseLayout>
