---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHero from '../components/shared/PageHero.astro';
import { SITE } from '../lib/constants';
---

<BaseLayout title="Contact" description="Get in touch with Metis GRC — book a demo, ask questions, or explore partnership opportunities.">
  <PageHero title="Get in Touch" subtitle="Book a demo, ask questions, or explore how Metis GRC can help your organization." />

  <section class="py-20 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-5 gap-12">
        <!-- Form -->
        <div class="md:col-span-3">
          <div class="bg-white rounded-2xl border border-border shadow-card p-8">
            <h2 class="text-xl font-semibold text-text-primary mb-6">Send us a message</h2>
            <form id="contact-form" class="space-y-5">
              <div class="grid sm:grid-cols-2 gap-5">
                <div>
                  <label for="name" class="block text-sm font-medium text-text-primary mb-1.5">Name *</label>
                  <input type="text" id="name" name="name" required class="w-full rounded-lg border border-border bg-background px-4 py-2.5 text-sm text-text-primary placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" placeholder="Your name" />
                </div>
                <div>
                  <label for="company" class="block text-sm font-medium text-text-primary mb-1.5">Company *</label>
                  <input type="text" id="company" name="company" required class="w-full rounded-lg border border-border bg-background px-4 py-2.5 text-sm text-text-primary placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" placeholder="Your company" />
                </div>
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-text-primary mb-1.5">Email *</label>
                <input type="email" id="email" name="email" required class="w-full rounded-lg border border-border bg-background px-4 py-2.5 text-sm text-text-primary placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" placeholder="you@company.com" />
              </div>
              <div>
                <label for="interest" class="block text-sm font-medium text-text-primary mb-1.5">I'm interested in...</label>
                <select id="interest" name="interest" class="w-full rounded-lg border border-border bg-background px-4 py-2.5 text-sm text-text-primary focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
                  <option value="demo">Book a Demo</option>
                  <option value="trial">Start Free Trial</option>
                  <option value="partnership">Partnership</option>
                  <option value="other">Other</option>
                </select>
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-text-primary mb-1.5">Message</label>
                <textarea id="message" name="message" rows="4" class="w-full rounded-lg border border-border bg-background px-4 py-2.5 text-sm text-text-primary placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary resize-none" placeholder="Tell us about your GRC needs..."></textarea>
              </div>
              <button type="submit" class="w-full sm:w-auto bg-primary hover:bg-primary-600 text-white font-medium px-8 py-3 rounded-lg transition-colors">
                Send Message
              </button>
            </form>
          </div>
        </div>

        <!-- Info -->
        <div class="md:col-span-2 space-y-8">
          <div>
            <h3 class="text-lg font-semibold text-text-primary mb-4">Contact Information</h3>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                <div>
                  <div class="text-sm font-medium text-text-primary">Email</div>
                  <a href={`mailto:${SITE.contactEmail}`} class="text-sm text-secondary hover:text-secondary-600">{SITE.contactEmail}</a>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                <div>
                  <div class="text-sm font-medium text-text-primary">Location</div>
                  <div class="text-sm text-text-muted">Portugal, European Union</div>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-[12px] border border-border p-6">
            <h3 class="text-base font-semibold text-text-primary mb-3">Quick Start</h3>
            <p class="text-sm text-text-muted mb-4">Want to jump right in? Start a free trial — no credit card required.</p>
            <a href={`${SITE.appUrl}/register`} class="inline-flex items-center gap-2 text-sm font-medium text-secondary hover:text-secondary-600 transition-colors">
              Start Free Trial
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
            </a>
          </div>

          <div class="bg-white rounded-[12px] border border-border p-6">
            <h3 class="text-base font-semibold text-text-primary mb-3">For Partners</h3>
            <p class="text-sm text-text-muted">Interested in integration partnerships, reseller programs, or consulting collaborations? We'd love to hear from you.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script define:vars={{ contactEmail: SITE.contactEmail }}>
  document.getElementById('contact-form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    const form = e.target;
    const name = form.name.value;
    const company = form.company.value;
    const email = form.email.value;
    const interest = form.interest.options[form.interest.selectedIndex].text;
    const message = form.message.value;

    const subject = encodeURIComponent(`[Metis GRC] ${interest} — ${company}`);
    const body = encodeURIComponent(
      `Name: ${name}\nCompany: ${company}\nEmail: ${email}\nInterest: ${interest}\n\n${message}`
    );
    window.location.href = `mailto:${contactEmail}?subject=${subject}&body=${body}`;
  });
</script>
