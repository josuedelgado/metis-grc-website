---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/shared/PageHero.astro';
import CTASection from '../../components/shared/CTASection.astro';
import AnimatedSection from '../../components/shared/AnimatedSection.tsx';
---

<BaseLayout title="Vendor Risk Management" description="Assess, score, and monitor third-party risk with supplier registers, dynamic questionnaires, and AI-powered risk scoring.">
  <PageHero title="Third-Party Risk Under Control" subtitle="Assess and continuously monitor vendor security posture with AI-powered scoring and automated questionnaires." dark />

  <section class="py-20 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-16">

      <!-- Supplier Register -->
      <AnimatedSection client:visible>
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-2xl font-bold text-text-primary mb-3">Supplier Register</h2>
            <p class="text-text-muted leading-relaxed mb-4">
              Centralized inventory of all third-party vendors with criticality classification, contract details, and risk profiles. Filter and prioritize by risk level.
            </p>
            <ul class="space-y-2">
              {['Criticality levels (Critical, High, Medium, Low)', 'Contract & renewal tracking', 'Service categorization', 'Risk score per vendor'].map((f) => (
                <li class="flex items-center gap-2 text-sm text-text-primary">
                  <svg class="w-4 h-4 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                  {f}
                </li>
              ))}
            </ul>
          </div>
          <div class="bg-white rounded-2xl border border-border shadow-card p-4">
            <div class="aspect-video bg-gradient-to-br from-primary-50 to-secondary-50 rounded-xl flex items-center justify-center">
              <span class="text-sm text-text-muted">Screenshot — Supplier Register</span>
            </div>
          </div>
        </div>
      </AnimatedSection>

      <!-- Questionnaires -->
      <AnimatedSection client:visible>
        <div class="grid md:grid-cols-2 gap-8 items-center md:grid-flow-dense">
          <div class="md:col-start-2">
            <h2 class="text-2xl font-bold text-text-primary mb-3">Dynamic Questionnaires</h2>
            <p class="text-text-muted leading-relaxed mb-4">
              Send customizable security questionnaires to vendors via a secure token-based portal. Vendors respond without creating an account. Track completion and review responses.
            </p>
            <ul class="space-y-2">
              {['Template library for common assessments', 'Multi-format questions (text, choice, file upload)', 'Token-based vendor portal (no signup needed)', 'Automated reminders & status tracking'].map((f) => (
                <li class="flex items-center gap-2 text-sm text-text-primary">
                  <svg class="w-4 h-4 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                  {f}
                </li>
              ))}
            </ul>
          </div>
          <div class="md:col-start-1 bg-white rounded-2xl border border-border shadow-card p-4">
            <div class="aspect-video bg-gradient-to-br from-secondary-50 to-warning-50 rounded-xl flex items-center justify-center">
              <span class="text-sm text-text-muted">Screenshot — Questionnaires</span>
            </div>
          </div>
        </div>
      </AnimatedSection>

      <!-- AI Scoring -->
      <AnimatedSection client:visible>
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-2xl font-bold text-text-primary mb-3">AI-Powered Risk Scoring</h2>
            <p class="text-text-muted leading-relaxed mb-4">
              AI analyzes questionnaire responses, identifies risk drivers, and generates a composite risk score. Compare vendors, track posture changes over time, and link vendor risks to your control landscape.
            </p>
            <ul class="space-y-2">
              {['Automated response analysis', 'Risk driver identification', 'Posture trend tracking', 'Linked to enterprise risk register'].map((f) => (
                <li class="flex items-center gap-2 text-sm text-text-primary">
                  <svg class="w-4 h-4 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                  {f}
                </li>
              ))}
            </ul>
          </div>
          <div class="bg-white rounded-2xl border border-border shadow-card p-4">
            <div class="aspect-video bg-gradient-to-br from-warning-50 to-critical-50 rounded-xl flex items-center justify-center">
              <span class="text-sm text-text-muted">Screenshot — AI Risk Scoring</span>
            </div>
          </div>
        </div>
      </AnimatedSection>

    </div>
  </section>

  <CTASection title="Assess Your Vendors" subtitle="Start managing third-party risk with AI-powered assessments." />
</BaseLayout>
