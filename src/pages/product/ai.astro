---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/shared/PageHero.astro';
import CTASection from '../../components/shared/CTASection.astro';
import AnimatedSection from '../../components/shared/AnimatedSection.tsx';
---

<BaseLayout title="AI Copilots" description="Nine AI copilots embedded across Metis GRC — regulatory Q&A, evidence classification, cross-framework mapping, and more.">
  <PageHero title="AI-Powered GRC Intelligence" subtitle="Nine copilots embedded across the platform. Your data stays in the EU. AI processes in-context only." dark />

  <section class="py-20 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {[
          {
            title: 'Regulatory Q&A',
            desc: 'Ask questions about any supported framework in plain language. Get instant answers with references to specific articles, controls, and obligations. No more searching through hundreds of pages of regulation.',
            example: '"What are the NIS2 incident reporting requirements for essential entities in Germany?"',
          },
          {
            title: 'Control Explanation',
            desc: 'Understand what each control means in practical terms. The AI explains requirements, suggests implementation approaches, and provides examples tailored to your organization size and industry.',
            example: '"Explain ISO 27001 A.8.2 and how it applies to a healthcare SaaS company."',
          },
          {
            title: 'Assessment Assistance',
            desc: 'Upload your evidence and let AI propose maturity/compliance levels with detailed justification. Accelerate assessments from weeks to days while maintaining rigor and consistency.',
            example: 'AI reviews your access control policy and suggests "Partially Implemented" with specific gaps identified.',
          },
          {
            title: 'Evidence Classification',
            desc: 'Drop documents into the evidence repository and AI automatically tags them with relevant controls, frameworks, and sensitivity levels. OCR processing handles scanned documents.',
            example: 'Upload a penetration test report → auto-tagged to 5 controls across NIS2 and ISO 27001.',
          },
          {
            title: 'Cross-Framework Mapping',
            desc: 'Discover control equivalences across NIS2, ISO 27001, NIST CSF, and CIS Controls. Eliminate duplicate work by mapping a single control implementation to multiple framework requirements.',
            example: 'NIS2 Art. 21(2)(a) ↔ ISO A.5.1 ↔ NIST GV.PO-01 ↔ CIS Control 1',
          },
          {
            title: 'Remediation Planning',
            desc: 'Generate prioritized action plans with suggested owners, effort estimates, and timelines. AI considers your current maturity, available resources, and regulatory deadlines.',
            example: 'AI generates a 90-day NIS2 remediation plan with 23 tasks across 4 workstreams.',
          },
          {
            title: 'Report Generation',
            desc: 'Draft board-ready executive summaries and detailed compliance reports in minutes. Choose from CISO dashboard views, audit preparation reports, or regulatory submission formats.',
            example: 'Generate a 2-page board briefing on NIS2 readiness with risk highlights and action items.',
          },
          {
            title: 'Risk Recommendations',
            desc: 'Based on your asset inventory, control landscape, and industry context, AI identifies risks you may not have considered. Suggests likelihood and impact scores with reasoning.',
            example: 'AI identifies 3 supply chain risks based on your vendor questionnaire responses.',
          },
          {
            title: 'Predictive Gap Analysis',
            desc: 'Early warning system that monitors compliance trends and predicts where degradation is likely. Alerts before controls expire, evidence becomes stale, or risks exceed thresholds.',
            example: 'Alert: 4 controls predicted to fall below threshold in Q3 based on evidence expiry dates.',
          },
        ].map((ai, i) => (
          <AnimatedSection client:visible delay={i * 0.06}>
            <div class="bg-white rounded-[12px] p-6 shadow-card hover:shadow-card-hover transition-shadow h-full flex flex-col">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-8 h-8 rounded-lg bg-secondary-50 flex items-center justify-center shrink-0">
                  <svg class="w-4 h-4 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <h3 class="text-base font-semibold text-text-primary">{ai.title}</h3>
              </div>
              <p class="text-sm text-text-muted leading-relaxed mb-4 flex-1">{ai.desc}</p>
              <div class="bg-primary-50/50 rounded-lg p-3 border border-primary-100">
                <p class="text-xs text-primary-700 font-mono leading-relaxed">{ai.example}</p>
              </div>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- Trust section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <AnimatedSection client:visible>
        <h2 class="text-2xl font-bold text-text-primary mb-6">Built for Enterprise Trust</h2>
        <div class="grid sm:grid-cols-3 gap-6">
          {[
            { title: 'EU Data Residency', desc: 'All data processed and stored within the European Union.' },
            { title: 'Context-Only AI', desc: 'AI operates on your data only — no training on customer content.' },
            { title: 'Full Audit Trail', desc: 'Every AI interaction is logged for compliance and accountability.' },
          ].map((item) => (
            <div class="text-center">
              <div class="w-10 h-10 rounded-full bg-success-50 flex items-center justify-center mx-auto mb-3">
                <svg class="w-5 h-5 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
              </div>
              <h3 class="text-sm font-semibold text-text-primary mb-1">{item.title}</h3>
              <p class="text-xs text-text-muted">{item.desc}</p>
            </div>
          ))}
        </div>
      </AnimatedSection>
    </div>
  </section>

  <CTASection title="Try AI Copilots Free" subtitle="Experience AI-powered GRC with a 14-day free trial." />
</BaseLayout>
