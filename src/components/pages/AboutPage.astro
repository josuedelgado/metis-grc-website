---
import PageHero from '../shared/PageHero.astro';
import CTASection from '../shared/CTASection.astro';
import AnimatedSection from '../shared/AnimatedSection.tsx';
import { useTranslations } from '../../lib/i18n';

const { t, td } = useTranslations(Astro.currentLocale);

const values = td<{ title: string; desc: string }[]>('about.values.items');
const valueIcons = [
  'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
  'M13 10V3L4 14h7v7l9-11h-7z',
  'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
];
---

<PageHero title={t('about.hero.title')} subtitle={t('about.hero.subtitle')} dark />

<!-- Mission -->
<section class="py-20 bg-background">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center">
        <h2 class="text-2xl font-bold text-text-primary mb-6">{t('about.mission.title')}</h2>
        <p class="text-lg text-text-muted leading-relaxed mb-4">{t('about.mission.p1')}</p>
        <p class="text-lg text-text-muted leading-relaxed">{t('about.mission.p2')}</p>
      </div>
    </AnimatedSection>
  </div>
</section>

<!-- Values -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center mb-12">
        <h2 class="text-2xl font-bold text-text-primary mb-4">{t('about.values.title')}</h2>
      </div>
    </AnimatedSection>
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {values.map((val, i) => (
        <AnimatedSection client:visible delay={i * 0.1}>
          <div class="bg-background rounded-[12px] p-6 h-full">
            <div class="w-10 h-10 rounded-lg bg-secondary-50 flex items-center justify-center mb-4">
              <svg class="w-5 h-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={valueIcons[i]} />
              </svg>
            </div>
            <h3 class="text-base font-semibold text-text-primary mb-2">{val.title}</h3>
            <p class="text-sm text-text-muted leading-relaxed">{val.desc}</p>
          </div>
        </AnimatedSection>
      ))}
    </div>
  </div>
</section>

<!-- Team -->
<section class="py-20 bg-background">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-text-primary mb-4">{t('about.team.title')}</h2>
      </div>
      <div class="bg-white rounded-2xl border border-border shadow-card p-8 text-center">
        <div class="w-16 h-16 bg-primary-50 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <p class="text-text-muted leading-relaxed max-w-2xl mx-auto mb-4" set:html={t('about.team.p1')} />
        <p class="text-text-muted leading-relaxed max-w-2xl mx-auto">{t('about.team.p2')}</p>
      </div>
    </AnimatedSection>
  </div>
</section>

<!-- Location -->
<section class="py-20 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center">
        <div class="inline-flex items-center gap-2 bg-primary-50 rounded-full px-4 py-1.5 mb-6">
          <svg class="w-4 h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
          <span class="text-sm font-medium text-primary">{t('about.location.badge')}</span>
        </div>
        <h2 class="text-2xl font-bold text-text-primary mb-4">{t('about.location.title')}</h2>
        <p class="text-text-muted max-w-lg mx-auto leading-relaxed">{t('about.location.desc')}</p>
      </div>
    </AnimatedSection>
  </div>
</section>

<CTASection title={t('about.cta.title')} subtitle={t('about.cta.subtitle')} />
