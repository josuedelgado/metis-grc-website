---
import PageHero from '../shared/PageHero.astro';
import CTASection from '../shared/CTASection.astro';
import AnimatedSection from '../shared/AnimatedSection.tsx';
import { useTranslations, localizeHref } from '../../lib/i18n';

const { t, td } = useTranslations(Astro.currentLocale);
const locale = Astro.currentLocale;

const modules = td<{ title: string; desc: string; features: string[] }[]>('product.modules');
const moduleLinks = ['/product/frameworks', '/product/ai', '/product', '/product/nis2', '/product/vendor-risk', '/product'];
const moduleIcons = [
  'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10',
  'M13 10V3L4 14h7v7l9-11h-7z',
  'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  'M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z',
];
const moduleColors = ['primary', 'secondary', 'warning', 'success', 'critical', 'primary'];
const moduleScreenshots = [
  '/images/screenshots/framework-library.png',
  '/images/screenshots/dashboard.png',
  '/images/screenshots/risk-register.png',
  '/images/screenshots/compliance.png',
  '/images/screenshots/vendor-risk.png',
  '/images/screenshots/reports.png',
];
---

<PageHero title={t('product.hero.title')} subtitle={t('product.hero.subtitle')} dark />

<section class="py-20 bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="space-y-16">
      {modules.map((mod, i) => (
        <AnimatedSection client:visible>
          <div class={`grid md:grid-cols-2 gap-8 items-center ${i % 2 !== 0 ? 'md:grid-flow-dense' : ''}`}>
            <div class={i % 2 !== 0 ? 'md:col-start-2' : ''}>
              <div class={`w-10 h-10 rounded-lg bg-${moduleColors[i]}-50 flex items-center justify-center mb-4`}>
                <svg class={`w-5 h-5 text-${moduleColors[i]}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={moduleIcons[i]} />
                </svg>
              </div>
              <h2 class="text-2xl font-bold text-text-primary mb-3">{mod.title}</h2>
              <p class="text-text-muted mb-4 leading-relaxed">{mod.desc}</p>
              <ul class="space-y-2 mb-6">
                {mod.features.map((f: string) => (
                  <li class="flex items-center gap-2 text-sm text-text-primary">
                    <svg class="w-4 h-4 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                    {f}
                  </li>
                ))}
              </ul>
              {moduleLinks[i] !== '/product' && (
                <a href={localizeHref(moduleLinks[i], locale)} class="inline-flex items-center gap-2 text-sm text-primary hover:text-primary-600 font-medium transition-colors">
                  {t('product.learnMore')}
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                </a>
              )}
            </div>
            <div class={`bg-white rounded-2xl border border-border shadow-card p-4 ${i % 2 !== 0 ? 'md:col-start-1' : ''}`}>
              <img src={moduleScreenshots[i]} alt={`${t('product.screenshotAlt')} â€” ${mod.title}`} class="rounded-xl w-full" loading="lazy" />
            </div>
          </div>
        </AnimatedSection>
      ))}
    </div>
  </div>
</section>

<CTASection />
