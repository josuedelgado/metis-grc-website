---
import AnimatedSection from '../shared/AnimatedSection.tsx';
import FrameworkComparison from '../home/FrameworkComparison.tsx';
import { SITE } from '../../lib/constants';
import { useTranslations, localizeHref } from '../../lib/i18n';

const { t, td } = useTranslations(Astro.currentLocale);
const locale = Astro.currentLocale;

const problemCards = td<{ title: string; desc: string }[]>('home.problem.cards');
const solutionPills = td<{ label: string; desc: string }[]>('home.solution.pills');
const featureCards = td<{ title: string; desc: string }[]>('home.features.cards');
const aiAssistants = td<{ title: string; desc: string }[]>('home.ai.assistants');
const testimonials = td<{ quote: string; name: string; role: string }[]>('home.testimonials.items');
const comparisonLabels = {
  capability: t('comparison.capability'),
  metisGrc: t('comparison.metisGrc'),
  spreadsheets: t('comparison.spreadsheets'),
  legacyGrc: t('comparison.legacyGrc'),
};
const comparisonRows = td<{ name: string; metis: boolean; spreadsheets: boolean; legacy: boolean }[]>('comparison.rows');

const problemIcons = [
  'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2',
  'M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z',
  'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
];
const solutionHrefs = ['/product/frameworks', '/product/ai', '/product/nis2', '/product/vendor-risk'];
const solutionColors = ['bg-primary', 'bg-secondary', 'bg-success', 'bg-warning'];
const featureIcons = [
  'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  'M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z',
  'M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9',
  'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
  'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z',
];
---

<!-- HERO -->
<section class="relative bg-gradient-to-br from-panel-dark via-primary-900 to-primary overflow-hidden">
  <div class="absolute inset-0 opacity-10" style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='40' height='40' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 0h40v40H0z' fill='none' stroke='%234CB2FF' stroke-width='0.5'/%3E%3C/svg%3E&quot;);"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <AnimatedSection client:visible>
          <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur rounded-full px-4 py-1.5 mb-6">
            <span class="w-2 h-2 rounded-full bg-success animate-pulse"></span>
            <span class="text-sm text-gray-300">{t('home.hero.badge')}</span>
          </div>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6">
            {t('home.hero.title')}<br />
            <span class="text-secondary">{t('home.hero.titleHighlight')}</span>
          </h1>
          <p class="text-lg text-gray-300 mb-8 max-w-lg">{t('home.hero.subtitle')}</p>
          <div class="flex flex-wrap gap-4">
            <a href={`${SITE.appUrl}/register`} class="inline-flex items-center justify-center bg-secondary hover:bg-secondary-600 text-white font-medium px-6 py-3 rounded-lg transition-colors">
              {t('home.hero.cta')}
            </a>
            <a href={localizeHref('/contact', locale)} class="inline-flex items-center justify-center border border-white/30 hover:bg-white/10 text-white font-medium px-6 py-3 rounded-lg transition-colors">
              {t('home.hero.ctaSecondary')}
            </a>
          </div>
        </AnimatedSection>
      </div>
      <!-- Dashboard mockup -->
      <div class="hidden lg:block">
        <AnimatedSection client:visible delay={0.2}>
          <div class="relative">
            <div class="bg-panel-dark/80 backdrop-blur border border-white/10 rounded-2xl p-6 shadow-xl">
              <div class="grid grid-cols-4 gap-3 mb-4">
                <div class="bg-white/5 rounded-xl p-3 text-center">
                  <div class="text-2xl font-bold text-success">87%</div>
                  <div class="text-xs text-gray-400 mt-1">{t('home.dashboard.compliance')}</div>
                </div>
                <div class="bg-white/5 rounded-xl p-3 text-center">
                  <div class="text-2xl font-bold text-warning">12</div>
                  <div class="text-xs text-gray-400 mt-1">{t('home.dashboard.openRisks')}</div>
                </div>
                <div class="bg-white/5 rounded-xl p-3 text-center">
                  <div class="text-2xl font-bold text-secondary">156</div>
                  <div class="text-xs text-gray-400 mt-1">{t('home.dashboard.controls')}</div>
                </div>
                <div class="bg-white/5 rounded-xl p-3 text-center">
                  <div class="text-2xl font-bold text-white">24</div>
                  <div class="text-xs text-gray-400 mt-1">{t('home.dashboard.vendors')}</div>
                </div>
              </div>
              <div class="bg-white/5 rounded-xl p-4 h-40 flex items-end gap-1.5 overflow-hidden">
                {[40, 55, 45, 70, 60, 80, 75, 85, 78, 90, 87, 92].map((h) => (
                  <div class="flex-1 rounded-t" style={`height: ${h}%; background: linear-gradient(to top, #1C4E80, #4CB2FF);`}></div>
                ))}
              </div>
              <div class="flex items-center justify-between mt-3 text-xs text-gray-500">
                <span>Jan</span><span>Feb</span><span>Mar</span><span>Apr</span><span>May</span><span>Jun</span>
                <span>Jul</span><span>Aug</span><span>Sep</span><span>Oct</span><span>Nov</span><span>Dec</span>
              </div>
            </div>
            <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-secondary/20 rounded-full blur-2xl"></div>
          </div>
        </AnimatedSection>
      </div>
    </div>
  </div>
</section>

<!-- SOCIAL PROOF -->
<section class="bg-white border-b border-border">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-wrap items-center justify-center gap-6 md:gap-10">
      <span class="inline-flex items-center gap-2 text-sm text-text-muted">
        <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
        {t('home.socialProof.euHosted')}
      </span>
      <span class="inline-flex items-center gap-2 text-sm text-text-muted">
        <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
        {t('home.socialProof.gdprCompliant')}
      </span>
      <span class="inline-flex items-center gap-2 text-sm text-text-muted">
        <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        {t('home.socialProof.soc2Ready')}
      </span>
      <span class="inline-flex items-center gap-2 text-sm text-text-muted">
        <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
        {t('home.socialProof.uptimeSla')}
      </span>
    </div>
  </div>
</section>

<!-- PROBLEM -->
<section class="py-20 bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-text-primary mb-4">{t('home.problem.title')}</h2>
        <p class="text-text-muted max-w-2xl mx-auto">{t('home.problem.subtitle')}</p>
      </div>
    </AnimatedSection>
    <div class="grid md:grid-cols-3 gap-6">
      {problemCards.map((card, i) => (
        <AnimatedSection client:visible delay={i * 0.1}>
          <div class="bg-white rounded-[12px] p-6 shadow-card hover:shadow-card-hover transition-shadow">
            <div class="w-10 h-10 rounded-lg bg-critical-50 flex items-center justify-center mb-4">
              <svg class="w-5 h-5 text-critical" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d={problemIcons[i]} />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-text-primary mb-2">{card.title}</h3>
            <p class="text-sm text-text-muted leading-relaxed">{card.desc}</p>
          </div>
        </AnimatedSection>
      ))}
    </div>
  </div>
</section>

<!-- SOLUTION -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-text-primary mb-4">{t('home.solution.title')}</h2>
        <p class="text-text-muted max-w-2xl mx-auto">{t('home.solution.subtitle')}</p>
      </div>
    </AnimatedSection>
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
      {solutionPills.map((pill, i) => (
        <AnimatedSection client:visible delay={i * 0.1}>
          <a href={localizeHref(solutionHrefs[i], locale)} class="group block bg-background hover:bg-white rounded-[12px] p-5 border border-border hover:border-primary/20 hover:shadow-card-hover transition-all">
            <div class={`w-2 h-2 rounded-full ${solutionColors[i]} mb-3`}></div>
            <h3 class="text-sm font-semibold text-text-primary group-hover:text-primary transition-colors mb-1">{pill.label}</h3>
            <p class="text-xs text-text-muted">{pill.desc}</p>
          </a>
        </AnimatedSection>
      ))}
    </div>
  </div>
</section>

<!-- FEATURES -->
<section class="py-20 bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-text-primary mb-4">{t('home.features.title')}</h2>
        <p class="text-text-muted max-w-2xl mx-auto">{t('home.features.subtitle')}</p>
      </div>
    </AnimatedSection>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featureCards.map((card, i) => (
        <AnimatedSection client:visible delay={i * 0.08}>
          <div class="bg-white rounded-[12px] p-6 shadow-card hover:shadow-card-hover transition-shadow h-full">
            <div class="w-10 h-10 rounded-lg bg-primary-50 flex items-center justify-center mb-4">
              <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={featureIcons[i]} />
              </svg>
            </div>
            <h3 class="text-base font-semibold text-text-primary mb-2">{card.title}</h3>
            <p class="text-sm text-text-muted leading-relaxed">{card.desc}</p>
          </div>
        </AnimatedSection>
      ))}
    </div>
  </div>
</section>

<!-- AI SECTION -->
<section class="py-20 bg-panel-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">{t('home.ai.title')}</h2>
        <div class="w-12 h-1 bg-secondary rounded-full mx-auto mb-4"></div>
        <p class="text-gray-400 max-w-2xl mx-auto">{t('home.ai.subtitle')}</p>
      </div>
    </AnimatedSection>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {aiAssistants.map((ai: { title: string; desc: string }, i: number) => (
        <AnimatedSection client:visible delay={i * 0.06}>
          <div class="bg-white/5 border-l-2 border-secondary rounded-lg p-5 hover:bg-white/10 transition-colors">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-secondary mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <div>
                <h3 class="text-sm font-semibold text-white mb-1">{ai.title}</h3>
                <p class="text-xs text-gray-400 leading-relaxed">{ai.desc}</p>
              </div>
            </div>
          </div>
        </AnimatedSection>
      ))}
    </div>
    <AnimatedSection client:visible>
      <div class="text-center mt-10">
        <a href={localizeHref('/product/ai', locale)} class="inline-flex items-center gap-2 text-sm text-secondary hover:text-secondary-300 transition-colors font-medium">
          {t('home.ai.learnMore')}
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
        </a>
      </div>
    </AnimatedSection>
  </div>
</section>

<!-- COMPARISON -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-text-primary mb-4">{t('home.comparison.title')}</h2>
        <p class="text-text-muted max-w-2xl mx-auto">{t('home.comparison.subtitle')}</p>
      </div>
    </AnimatedSection>
    <AnimatedSection client:visible>
      <div class="bg-background rounded-2xl border border-border p-6 overflow-hidden">
        <FrameworkComparison labels={comparisonLabels} rows={comparisonRows} client:visible />
      </div>
    </AnimatedSection>
  </div>
</section>

<!-- TESTIMONIALS -->
<section class="py-20 bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <AnimatedSection client:visible>
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-text-primary mb-4">{t('home.testimonials.title')}</h2>
      </div>
    </AnimatedSection>
    <div class="grid md:grid-cols-3 gap-6">
      {testimonials.map((item, i) => (
        <AnimatedSection client:visible delay={i * 0.1}>
          <div class="bg-white rounded-[12px] p-6 shadow-card h-full flex flex-col">
            <svg class="w-8 h-8 text-secondary/30 mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
            <p class="text-sm text-text-muted leading-relaxed flex-1 italic">{item.quote}</p>
            <div class="mt-4 pt-4 border-t border-border">
              <div class="text-sm font-medium text-text-primary">{item.name}</div>
              <div class="text-xs text-text-muted">{item.role}</div>
            </div>
          </div>
        </AnimatedSection>
      ))}
    </div>
  </div>
</section>

<!-- CTA BANNER -->
<section class="py-20 bg-gradient-to-r from-primary to-primary-700">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <AnimatedSection client:visible>
      <h2 class="text-3xl font-bold text-white mb-4">{t('home.ctaBanner.title')}</h2>
      <p class="text-primary-200 mb-8 max-w-lg mx-auto">{t('home.ctaBanner.subtitle')}</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={`${SITE.appUrl}/register`} class="inline-flex items-center justify-center bg-secondary hover:bg-secondary-600 text-white font-medium px-6 py-3 rounded-lg transition-colors">
          {t('home.ctaBanner.trial')}
        </a>
        <a href={localizeHref('/contact', locale)} class="inline-flex items-center justify-center bg-white/10 hover:bg-white/20 text-white font-medium px-6 py-3 rounded-lg transition-colors border border-white/20">
          {t('home.ctaBanner.sales')}
        </a>
      </div>
    </AnimatedSection>
  </div>
</section>
