---
import PageHero from '../shared/PageHero.astro';
import CTASection from '../shared/CTASection.astro';
import AnimatedSection from '../shared/AnimatedSection.tsx';
import { useTranslations } from '../../lib/i18n';

const { t, td } = useTranslations(Astro.currentLocale);

const wizardFeatures = td<string[]>('productNis2.wizard.features');
const obligationFeatures = td<string[]>('productNis2.obligations.features');
const timeline = td<{ time: string; label: string; desc: string }[]>('productNis2.incident.timeline');
---

<PageHero title={t('productNis2.hero.title')} subtitle={t('productNis2.hero.subtitle')} dark />

<section class="py-20 bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-16">

    <!-- Applicability Wizard -->
    <AnimatedSection client:visible>
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <div class="inline-flex items-center gap-2 bg-success-50 rounded-full px-3 py-1 text-xs font-medium text-success-600 mb-4">{t('productNis2.wizard.step')}</div>
          <h2 class="text-2xl font-bold text-text-primary mb-3">{t('productNis2.wizard.title')}</h2>
          <p class="text-text-muted leading-relaxed mb-4">{t('productNis2.wizard.desc')}</p>
          <ul class="space-y-2">
            {wizardFeatures.map((f) => (
              <li class="flex items-center gap-2 text-sm text-text-primary">
                <svg class="w-4 h-4 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                {f}
              </li>
            ))}
          </ul>
        </div>
        <div class="bg-white rounded-2xl border border-border shadow-card p-4">
          <img src="/images/screenshots/compliance.png" alt={t('productNis2.wizard.screenshot')} class="rounded-xl w-full" loading="lazy" />
        </div>
      </div>
    </AnimatedSection>

    <!-- Obligations Catalog -->
    <AnimatedSection client:visible>
      <div class="grid md:grid-cols-2 gap-8 items-center md:grid-flow-dense">
        <div class="md:col-start-2">
          <div class="inline-flex items-center gap-2 bg-secondary-50 rounded-full px-3 py-1 text-xs font-medium text-secondary-600 mb-4">{t('productNis2.obligations.step')}</div>
          <h2 class="text-2xl font-bold text-text-primary mb-3">{t('productNis2.obligations.title')}</h2>
          <p class="text-text-muted leading-relaxed mb-4">{t('productNis2.obligations.desc')}</p>
          <ul class="space-y-2">
            {obligationFeatures.map((f) => (
              <li class="flex items-center gap-2 text-sm text-text-primary">
                <svg class="w-4 h-4 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                {f}
              </li>
            ))}
          </ul>
        </div>
        <div class="md:col-start-1 bg-white rounded-2xl border border-border shadow-card p-4">
          <img src="/images/screenshots/frameworks.png" alt={t('productNis2.obligations.screenshot')} class="rounded-xl w-full" loading="lazy" />
        </div>
      </div>
    </AnimatedSection>

    <!-- Incident Workflow -->
    <AnimatedSection client:visible>
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <div class="inline-flex items-center gap-2 bg-critical-50 rounded-full px-3 py-1 text-xs font-medium text-critical-600 mb-4">{t('productNis2.incident.step')}</div>
          <h2 class="text-2xl font-bold text-text-primary mb-3">{t('productNis2.incident.title')}</h2>
          <p class="text-text-muted leading-relaxed mb-4">{t('productNis2.incident.desc')}</p>
          <div class="bg-white rounded-xl border border-border p-4 space-y-3">
            {timeline.map((step) => (
              <div class="flex items-start gap-3">
                <div class="bg-critical-50 text-critical font-mono text-xs font-bold rounded px-2 py-1 shrink-0 mt-0.5">{step.time}</div>
                <div>
                  <div class="text-sm font-medium text-text-primary">{step.label}</div>
                  <div class="text-xs text-text-muted">{step.desc}</div>
                </div>
              </div>
            ))}
          </div>
        </div>
        <div class="bg-white rounded-2xl border border-border shadow-card p-4">
          <img src="/images/screenshots/incidents.png" alt={t('productNis2.incident.screenshot')} class="rounded-xl w-full" loading="lazy" />
        </div>
      </div>
    </AnimatedSection>

  </div>
</section>

<CTASection title={t('productNis2.cta.title')} subtitle={t('productNis2.cta.subtitle')} />
