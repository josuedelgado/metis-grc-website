---
import { useTranslations, localizeHref } from '../../lib/i18n';
const { t } = useTranslations(Astro.currentLocale);
const locale = Astro.currentLocale;
---

<section class="py-32 bg-background">
  <div class="max-w-lg mx-auto px-4 text-center">
    <div class="text-6xl font-bold text-primary/20 mb-4">404</div>
    <h1 class="text-2xl font-bold text-text-primary mb-3">{t('404.title')}</h1>
    <p class="text-text-muted mb-8">{t('404.subtitle')}</p>
    <a href={localizeHref('/', locale)} class="inline-flex items-center gap-2 bg-primary hover:bg-primary-600 text-white font-medium px-6 py-3 rounded-lg transition-colors">
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M7 16l-4-4m0 0l4-4m-4 4h18" /></svg>
      {t('404.back')}
    </a>
  </div>
</section>
