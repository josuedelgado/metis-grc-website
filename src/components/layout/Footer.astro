---
import { SITE } from '../../lib/constants';

const year = new Date().getFullYear();

const columns = [
  {
    title: 'Product',
    links: [
      { label: 'Overview', href: '/product' },
      { label: 'AI Copilots', href: '/product/ai' },
      { label: 'NIS2 Compliance', href: '/product/nis2' },
      { label: 'Frameworks', href: '/product/frameworks' },
      { label: 'Vendor Risk', href: '/product/vendor-risk' },
    ],
  },
  {
    title: 'Company',
    links: [
      { label: 'About Us', href: '/about' },
      { label: 'Blog', href: '/blog' },
      { label: 'Contact', href: '/contact' },
    ],
  },
  {
    title: 'Legal',
    links: [
      { label: 'Privacy Policy', href: '/legal/privacy' },
      { label: 'Terms of Service', href: '/legal/terms' },
      { label: 'Cookie Policy', href: '/legal/cookies' },
    ],
  },
];
---

<footer class="bg-panel-dark text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
      <!-- Brand -->
      <div class="col-span-2">
        <a href="/" class="flex items-center gap-2.5 mb-4">
          <div class="h-8 w-8 rounded-lg bg-primary flex items-center justify-center">
            <span class="text-sm font-bold text-white">MG</span>
          </div>
          <span class="text-lg font-semibold text-white">Metis GRC</span>
        </a>
        <p class="text-sm text-gray-400 max-w-xs mb-6">
          Unified cybersecurity governance, risk, and compliance platform. AI-powered. EU-hosted.
        </p>
        <div class="flex items-center gap-3">
          <span class="inline-flex items-center gap-1.5 text-xs bg-white/10 rounded-full px-3 py-1 text-gray-300">
            <svg class="w-3 h-3" viewBox="0 0 12 12" fill="currentColor"><circle cx="6" cy="6" r="6"/></svg>
            EU Hosted
          </span>
          <span class="inline-flex items-center gap-1.5 text-xs bg-white/10 rounded-full px-3 py-1 text-gray-300">
            GDPR Compliant
          </span>
        </div>
      </div>

      <!-- Link Columns -->
      {columns.map((col) => (
        <div>
          <h3 class="text-sm font-semibold text-white mb-4">{col.title}</h3>
          <ul class="space-y-2.5">
            {col.links.map((link) => (
              <li>
                <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-white/10 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-gray-500">
        &copy; {year} {SITE.name}. All rights reserved.
      </p>
      <div class="flex items-center gap-4">
        <a href="/" class="text-sm text-gray-500 hover:text-white transition-colors">EN</a>
        <span class="text-gray-700">|</span>
        <a href="/pt" class="text-sm text-gray-500 hover:text-white transition-colors">PT</a>
      </div>
    </div>
  </div>
</footer>
