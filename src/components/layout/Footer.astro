---
import { SITE } from '../../lib/constants';
import { useTranslations, localizeHref } from '../../lib/i18n';

const { t } = useTranslations(Astro.currentLocale);
const locale = Astro.currentLocale;
const year = new Date().getFullYear();

const columns = [
  {
    titleKey: 'footer.product',
    links: [
      { labelKey: 'nav.productOverview', href: '/product' },
      { labelKey: 'nav.productAi', href: '/product/ai' },
      { labelKey: 'nav.productNis2', href: '/product/nis2' },
      { labelKey: 'nav.productFrameworks', href: '/product/frameworks' },
      { labelKey: 'nav.productVendorRisk', href: '/product/vendor-risk' },
    ],
  },
  {
    titleKey: 'footer.company',
    links: [
      { labelKey: 'footer.aboutUs', href: '/about' },
      { labelKey: 'nav.blog', href: '/blog' },
      { labelKey: 'nav.contact', href: '/contact' },
    ],
  },
  {
    titleKey: 'footer.legal',
    links: [
      { labelKey: 'footer.privacyPolicy', href: '/legal/privacy' },
      { labelKey: 'footer.termsOfService', href: '/legal/terms' },
      { labelKey: 'footer.cookiePolicy', href: '/legal/cookies' },
    ],
  },
];

// Compute alternate locale URL
const currentPath = Astro.url.pathname;
const altPath = locale === 'pt'
  ? currentPath.replace(/^\/pt/, '') || '/'
  : `/pt${currentPath}`;
---

<footer class="bg-panel-dark text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
      <!-- Brand -->
      <div class="col-span-2">
        <a href={localizeHref('/', locale)} class="flex items-center gap-2.5 mb-4">
          <div class="h-8 w-8 rounded-lg bg-primary flex items-center justify-center">
            <span class="text-sm font-bold text-white">MG</span>
          </div>
          <span class="text-lg font-semibold text-white">Metis GRC</span>
        </a>
        <p class="text-sm text-gray-400 max-w-xs mb-6">
          {t('footer.description')}
        </p>
        <div class="flex items-center gap-3">
          <span class="inline-flex items-center gap-1.5 text-xs bg-white/10 rounded-full px-3 py-1 text-gray-300">
            <svg class="w-3 h-3" viewBox="0 0 12 12" fill="currentColor"><circle cx="6" cy="6" r="6"/></svg>
            {t('footer.euHosted')}
          </span>
          <span class="inline-flex items-center gap-1.5 text-xs bg-white/10 rounded-full px-3 py-1 text-gray-300">
            {t('footer.gdprCompliant')}
          </span>
        </div>
      </div>

      <!-- Link Columns -->
      {columns.map((col) => (
        <div>
          <h3 class="text-sm font-semibold text-white mb-4">{t(col.titleKey)}</h3>
          <ul class="space-y-2.5">
            {col.links.map((link) => (
              <li>
                <a href={localizeHref(link.href, locale)} class="text-sm text-gray-400 hover:text-white transition-colors">
                  {t(link.labelKey)}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-white/10 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-gray-500">
        &copy; {year} {SITE.name}. {t('footer.copyright')}
      </p>
      <div class="flex items-center gap-4">
        <a href={locale === 'pt' ? altPath : currentPath} class:list={['text-sm transition-colors', locale !== 'pt' ? 'text-white font-medium' : 'text-gray-500 hover:text-white']}>EN</a>
        <span class="text-gray-700">|</span>
        <a href={locale === 'pt' ? currentPath : altPath} class:list={['text-sm transition-colors', locale === 'pt' ? 'text-white font-medium' : 'text-gray-500 hover:text-white']}>PT</a>
      </div>
    </div>
  </div>
</footer>
